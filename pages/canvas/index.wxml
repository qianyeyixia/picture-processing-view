<!--pages/canvas/index.wxml-->
<view>
    <view class="container">
        <view class="header">
            <canvas bindtouchstart="touchStart" id="testCanvas" 
            disable-scroll="true"
            class="upload_img" type="2d" style="left: {{_left}}px;"></canvas>
            <!-- <view wx:if="{{!imgSrc}}"  class="upload_img"  bindtap="chooseImage">
                上传图片
            </view> -->
        </view>
        <view class="">
            <button class="cu-btn" bindtap="chooseImage" style="width: 302rpx; height: 64rpx; display: inline-flex; box-sizing: border-box; left: 0rpx; top: 0rpx">选择/拍摄图片</button>
            <button class="cu-btn" bindtap="getOriginImage" data-color="origin" style="position: relative; left: 30rpx; top: 0rpx">还原图片背景</button>
            <view>
                <view style="width: 750rpx; height: 64rpx; display: block; box-sizing: border-box; left: NaNrpx; top: NaNrpx; font-size: x-large">
                    改变图片背景颜色
                </view>
                <button type="default" size="mini" bindtap="changeColor" size="mini"  data-color="black">黑色</button>
                <button type="default" size="mini"  bindtap="changeColor" data-color="red">红色</button>
                <button type="default" size="mini"  bindtap="changeColor" data-color="blue">蓝色</button>
            </view>
        </view>
        <view>
        <view>
            图片相框 <text bindtap="toggleFrame">{{ showFrameSrcs ? "收起相框" : "展示相框"}}</text>
        </view>
        <scroll-view scroll-x="true" class="swiper-content" wx:if="{{showFrameSrcs}}">
            <view class="frameBox" data-src="{{frame_path+item.picturePath}}" wx:for="{{frameSrcs}}" wx:key="id" bindtap="chooseFrame">
                <image class="frameBox-image" mode="aspectFit" src="{{frame_path+item.picturePath}}"></image>
                <!-- <text class="frameBox-text">{{item.title}}</text> -->
            </view>
        </scroll-view>
    </view>
    </view>

</view>